$TTL	604800
@	IN	SOA	{{ dns_hostname }}.	root.{{ network.domain }}.{{ network.suffix }}. (
       			       1	; Serial
			  604800	; Refresh
			   86400	; Retry
			 2419200	; Expire
			  604800 )	; Negative Cache TTL
;

@			IN	NS	{{ dns_hostname }}.
{% if item == dns_zone %}
{{ dns_server }}                    IN      A       {{ network.zones[dns_zone].ipv4_subnet | ipaddr(network.zones[dns_zone].hosts[dns_server].ipv4_offset) | ipaddr('address') }}
{% elif item == network.domain + "." + network.suffix %}
{{ dns_server }}.{{ dns_zone }}     IN      A       {{ network.zones[dns_zone].ipv4_subnet | ipaddr(network.zones[dns_zone].hosts[dns_server].ipv4_offset) | ipaddr('address') }}
{% endif %}
